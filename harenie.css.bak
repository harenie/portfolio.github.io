*{
  margin:0;
  padding: 0;
  box-sizing: border-box;
  font-family: sans-serif;
}

.hero{
	position: relative;
	width: 100%;
	height: 100vh;
	background: #eff4fd;
}

#logo{
  height: 90px;
  margin-left: 1%;
  float: left;
}


nav{
	display: flex;
	width: 84%;
	margin: auto;
	padding: 20px 0;
	align-items: center;
	justify-content: space-between;
	overflow: hidden;
}

nav ul li{
	display: inline-block;
	list-style: none;
	margin: 10px 20px;
}

nav ul li a{
	text-decoration: none;
	color: #000;
	font-weight: bold;
}

nav ul li a:hover {
	color: #FFAE42;
}

.detel{
	margin-left: 65%;
	margin-right: 13%;
	margin-top: 15%;
}

.detel h1{
	font-size: 42px;
	color: #212121;
	margin-bottom: 20px;
}

span{
	color: orange; 
}

.detel p{
	color: #555;
	line-height: 22px;
}

.detel a{
	background: #212121;
	padding: 10px 18px;
	text-decoration: none;
	font-weight: bold;
	color: #fff;
	display: inline-block;
	margin: 30px 0;
	border-radius: 5px;
}

.images{
	width: 45%;
	height: 80;
	position: absolute;
	bottom: 0;
	left: 100px;
}

.images img{
	position: absolute;
	left: 50%;
	bottom: 0;
	transform: translatex(-50%);
	transition: bottom 1s, left 1s;
}

.images:hover .shape{
	bottom: 15px;
}

.images:hover  .girl{
	left: 45%;
}